<!-- Test to see if there is a news ticker and/or slider -->
<% news_ticks = Spree::Tick.all %>
<% if news_ticks.map(&:published).include?(true) && Spree::Slide.published.count > 0 %>
    <% type = "_with_slide_and_ticker" %>
<% elsif Spree::Slide.published.count > 0 %>
    <% type = "_with_slide_no_ticker" %>
<% else %>
    <% type = "_no_slide" %>
<% end %>

<div id="cupcake_decorations_border<%= type %>">
  <div id="cupcake_decorations">
      <h6>Cupcake Decorations</h6>
       <br>
        <div id="cupcake_decoration_text">
        Make your celebration perfect with our fun range of <%= link_to "cupcake decorations", cupcake_decorations_path %>
        </div>
      <br>
      <a href="products/twinkle-toes-ballet-cupcake-kit"><img align="center" width=200px; height=170px; src="/assets/store/ballet_topper.JPG" alt="ballet_topper"></a>

      <br/>
  </div>
</div>


